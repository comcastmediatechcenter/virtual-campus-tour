<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, shrink-to-fit=no">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Directory</title>
    <style>
      .map-background {
        background: url("/img/map.png") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
      }
      .border {
        border-style: solid;
        border-color: #cfb87c;
        border-radius: 3px;
      }
      html {
        background-color: black;
      }
    </style>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
      $(document).ready(function() {
        $("body").css("display", "none");
        $("body").fadeIn("slow");

        $('a').click(function(e) {
          e.preventDefault();
          var dest = this.href;
          $('body').fadeOut('slow', function(){
            window.location = dest;
          });
        });
      });
    </script>
  </head>
  <body class="">
    <div class="w3-display w3-hide-small" style="width:100%;height:100%; overflow:hidden;">
      <img src="/img/map.png" style="width:100%;">
      <div class="w3-display-topleft w3-container" style="width:550px; height:250px; overflow:auto; background: rgba(200, 200, 200, 0.75);">
        <div class="w3-xlarge w3-center" style="background-color: #cfb87c;">
          CU Denver as a part of Auraria Campus
        </div>
        <% locations.forEach(function(location, i){ %>
          <a href="<%= location.url %>">
            <div class="w3-row w3-margin w3-white w3-round" style="width: 100%;">
              <div class="w3-container w3-col w3-large border" style="width:50px">
                <%= (i + 1) %>
              </div>
              <div class="w3-container w3-rest">
                <%= location.name %>
              </div>
            </div>
          </a>
        <% }) %>
      </div>
      <div class="w3-display-bottomright w3-container" style="width:500px; background: rgba(200, 200, 200, 0.75);">
        <img src="/img/ui/ucd_logo.png" alt="" style="width: 100%;">
      </div>
      <% pins.forEach(function(pin){ %>
        <a href="<%= pin.dest %>" style="position: absolute; top: <%= pin.top %>%; left: <%= pin.left %>%; transform: translate( -50%, -50% );">
          <div class="w3-container w3-white border w3-tooltip">
            <%= pin.number %>
            <span style="position:absolute; left:0; bottom:18px; z-index:1000;" class="w3-text w3-tag"><%= pin.name %></span>
          </div>
        </a>
      <% }); %>
    </div>
    <div class="w3-hide-large w3-white">
      <h1>Locations:</h1>
      <ul>
        <% locations.forEach(function(location){ %>
          <li><a href="<%= location.url %>"><%= location.name %></a> <br></li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
