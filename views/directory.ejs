<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, shrink-to-fit=no">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Directory</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
      $(document).ready(function() {
        $("body").css("display", "none");
        $("body").fadeIn("slow");

        $('a').click(function(e) {
          e.preventDefault();
          var dest = this.href;
          $('body').fadeOut('slow', function(){
            window.location = dest;
          });
        });
      });
    </script>
  </head>
  <body style="background-color: black;">
    <div class="w3-display w3-hide-small" style="width:100%;height:100%; overflow:hidden;">
      <img src="/img/map.png" style="width:100%;">
      <div class="w3-display-topleft w3-padding-small w3-round-xlarge" style="background: rgba(200, 200, 200, 0.75);">
        <div class="w3-container" style="width:550px; height:250px; overflow:auto;">
          <div class="w3-xlarge w3-center" style="background-color: #cfb87c;">
            <b>CEDC as a part of Auraria Campus</b>
          </div>
          <%
            var c = 0;
            locations.forEach(function(location){
              if(location.map != null){
                c++; %>
                <a href="<%= location.url %>">
                  <div class="w3-row w3-margin w3-white w3-round" style="width: 95%;">
                    <div class="w3-container w3-col w3-large border" style="width:50px">
                      <b><%= c %></b>
                    </div>
                    <div class="w3-container w3-rest">
                      <%= location.name %>
                    </div>
                  </div>
                </a>
          <%  }
            }); %>
        </div>
        <div class="w3-center">
          <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-chevron-compact-down" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M1.553 6.776a.5.5 0 0 1 .67-.223L8 9.44l5.776-2.888a.5.5 0 1 1 .448.894l-6 3a.5.5 0 0 1-.448 0l-6-3a.5.5 0 0 1-.223-.67z"/>
          </svg>
        </div>
      </div>
      <div class="w3-display-bottomright w3-container w3-padding-small w3-round-xlarge" style="width:500px; background: rgba(200, 200, 200, 0.75);">
        <img src="/img/ui/ucd_logo.png" alt="" style="width: 100%;">
      </div>
      <%
        var c = 0;
        locations.forEach(function(location){
          if(location.map != null){
            c++; %>
            <a href="<%= location.url %>" style="position: absolute; top: <%= location.map.top %>%; left: <%= location.map.left %>%; transform: translate( -50%, -50% );">
              <div class="w3-container w3-white border w3-tooltip">
                <%= c %>
                <span style="position:absolute; left:0; bottom:18px; z-index:1000;" class="w3-text w3-tag"><%= location.name %></span>
              </div>
            </a>
      <%  }
        }); %>
      <img src="img/ui/logo.png" alt="" class="w3-display-topright w3-padding-small w3-image" onclick="window.location.href = 'https://engineering.ucdenver.edu/'; " style="max-width:40%;">
    </div>
    <div class="w3-hide-large w3-gray">
      <div class="w3-display" style="width: 100%; height: 100%;">
        <div class="w3-display-middle w3-round-large tooltip" style="background: rgba(255, 255, 255, 0.75);">
          <header class="tooltip-header w3-center">
            <b><h1>Attention!</h1></b>
          </header>
          <div class="w3-padding">
            This experience was designed for desktop and will not function as intended on mobile. Please visit on a desktop browser.
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
